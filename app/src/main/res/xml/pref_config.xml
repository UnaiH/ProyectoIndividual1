<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:visibility="visible"
        android:key="tema_interfaz"
        android:title="@string/temint">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="tema"
            android:summary="@string/modoscdef"
            android:title="@string/modosc" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="datos_libros"
        android:title="@string/datdeflib">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="genero"
            android:title="@string/genlib"
            android:summary="@string/podgenlib"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/idiom"
        android:title="@string/idimaplic">
        <ListPreference
            android:entries="@array/listaidiomas"
            android:entryValues="@array/listaidiomas"
            android:summary="@string/listidiom"
            android:key="listapreferencias"
            android:title="@string/lisidomas"/>
    </PreferenceCategory>
</PreferenceScreen>